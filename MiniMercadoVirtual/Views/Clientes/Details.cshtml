@model MiniMercadoVirtual.Models.Cliente

@{
    ViewData["Title"] = "Detalhes";
}

<p>
    <h3>Detalhes</h3>
</p>

<h4>Cliente</h4>
<div class="row">
    <table class="table">
        <tr>
            <td class="col-md-2"><strong>@Html.DisplayNameFor(model => model.Nome)</strong></td>
            <td class="col-md-10">@Html.DisplayFor(model => model.Nome)</td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.Email)</strong></td>
            <td>@Html.DisplayFor(model => model.Email)</td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.Senha)</strong></td>
            <td>@Html.DisplayFor(model => model.Senha)</td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.DtInclusao)</strong></td>
            <td>@Html.DisplayFor(model => model.DtInclusao)</td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.DtAlteracao)</strong></td>
            <td>@Html.DisplayFor(model => model.DtAlteracao)</td>
        </tr>
        <tr>
            <td><strong>@Html.DisplayNameFor(model => model.Status)</strong></td>
            <td>@Html.DisplayFor(model => model.Status)</td>
        </tr>
    </table>
</div>
<p><strong>Endereços</strong></p>
<div>
    <table class="table col-md-12">
        <thead>
            <tr>
                <th>Cep</th>
                <th>Logradouro</th>
                <th>Número</th>
                <th>Bairro</th>
                <th>Cidade</th>
                <th>Uf</th>
                <th>Complemento</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Endereco)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Cep)</td>
                    <td>@Html.DisplayFor(modelItem => item.Logradouro)</td>
                    <td>@Html.DisplayFor(modelItem => item.Numero)</td>
                    <td>@Html.DisplayFor(modelItem => item.Bairro)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                    <td>@Html.DisplayFor(modelItem => item.Uf)</td>
                    <td>@Html.DisplayFor(modelItem => item.Complemento)</td>
                    <td><a class="btn btn-primary btn-sm" asp-action="Alterar" asp-controller="Enderecos" asp-route-id="@item.Id">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <br /><a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> - <a class="btn btn-primary" asp-action="Index">Lista de Clientes</a>
</div>
